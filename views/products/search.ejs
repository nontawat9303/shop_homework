<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>
    <div class="container">
        <br/><br/><br/>
        <h2 style="text-align: center">Wellcome</h2><br/>
        <div class="row">
            <form class="woocommerce-ordering" action="/category" method="POST">
                <select id="category_name" name="orderby" class="orderby">
                    <option value="menu_order" s selected="selected">ทั้งหมด</option>
                    <option value="mouse">mouse</option>
                    <option value="keybord">keybord</option>
                </select>
            </form>
            
            <% if (prods.length > 0) { %>

                <% prods.map((product, index) => { %>
            <div class="col-md-6 col-lg-3 ftco-animate">
                <div class="product">
                    <a href="<%- '/'+product._id%>" class="img-prod"><img class="img-fluid" src=" <%- product.img_path%>" alt="Colorlib Template">
                        <div class="overlay"></div>
                    </a>
                    <div class="text py-3 pb-4 px-3 text-center">
                        <h3><a href="#"> <%- product.product_name%></a></h3>
                        <div class="d-flex">
                            <div class="pricing">
                                <p class="price"><span> <%- product.price%> $</span></p>
                            </div>
                        </div>
                        <div class="bottom-area d-flex px-3">
                            <div class="m-auto d-flex">
                                <a href="<%- '/'+product._id%>" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                    <span><i class="ion-ios-cart"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4">
                                            <h1>No Products Found!</h1>
                                        </td>
                                    </tr>
                                    <% } %>
        </div>
    </div>


            <%- include('../includes/end.ejs') %>